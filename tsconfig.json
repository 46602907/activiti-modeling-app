{
    "compileOnSave": false,
    "compilerOptions": {
        "importHelpers": true,
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "target": "es5",
        "allowSyntheticDefaultImports": true,
        "typeRoots": ["node_modules/@types"],
        "lib": ["esnext.array", "es2017", "dom"],
        "module": "es2015",
        "types": ["jasmine"],
        "baseUrl": "./",
        "paths": {
            "@alfresco-dbp/modeling/ama-sdk": ["projects/ama-sdk/src/public_api.ts"],
            "@alfresco-dbp/modeling/ama-testing/e2e": ["projects/ama-testing/src/e2e"]
        }
    },
    "exclude": ["node_modules", ],
    "angularCompilerOptions": {
        "preserveWhitespaces": false
    }
}
